{
  "name": "rigoutech-website",
  "version": "1.0.0",
  "private": true,
  "description": "Rigoutech static website",
  "scripts": {
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js && npm run format:check",
    "lint:html": "html-validate index.html",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md,yml,yaml,xml}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "html-validate": "^9.2.1",
    "prettier": "^3.4.2",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0"
  }
}
